{
    "name": "dereuromark/cakephp-file-storage",
    "type": "cakephp-plugin",
    "description": "This plugin is giving you the possibility to store files in virtually any kind of storage backend. This plugin is wrapping the Gaufrette library (https://github.com/KnpLabs/Gaufrette) library in a CakePHP fashion and provides a simple way to use the storage adapters through the StorageManager class.",
    "keywords": [
        "file",
        "filesystem",
        "media",
        "abstraction",
        "upload",
        "cakephp",
        "storage"
    ],
    "homepage": "https://github.com/dereuromark/cakephp-file-storage-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "Florian KrÃ¤mer",
            "homepage": "https://florian-kraemer.net"
        },
        {
            "name": "Other contributors",
            "homepage": "https://github.com/dereuromark/cakephp-file-storage/graphs/contributors",
            "role": "Contributors"
        }
    ],
    "require": {
        "php": ">=8.1",
        "brick/varexporter": "^0.3.5",
        "cakephp/cakephp": "^5.0.0",
        "league/flysystem": "^1.1.10",
        "intervention/image": "^2.5",
        "spatie/image-optimizer": "^1.2"
    },
    "require-dev": {
        "cakephp/plugin-installer": "^1.3.0",
        "phpunit/phpunit": "^10.2",
        "spryker/code-sniffer": "^0.17.1"
    },
    "autoload": {
        "psr-4": {
            "FileStorage\\": "src/",
            "FileStorage\\Test\\Fixture\\": "tests/Fixture/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TestApp\\": "tests/test_app/src/",
            "FileStorage\\Test\\TestCase\\": "tests/TestCase/"
        }
    },
    "suggest": {
        "phauthentic/file-storage-image-processor": "Required if you want to use the image processing feature of FileStorage"
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@test",
            "@stan"
        ],
        "cs-check": "phpcs --extensions=php",
        "cs-fix": "phpcbf --extensions=php",
        "stan": "phpstan analyse",
        "stan-test": "phpstan analyse tests/",
        "stan-setup": "cp composer.json composer.backup && composer require --dev phpstan/phpstan:^1.2.0 && mv composer.backup composer.json",
        "lowest": "validate-prefer-lowest",
        "lowest-setup": "composer update --prefer-lowest --prefer-stable --prefer-dist --no-interaction && cp composer.json composer.backup && composer require --dev dereuromark/composer-prefer-lowest && mv composer.backup composer.json",
        "test": "phpunit",
        "coverage-test": "phpunit --stderr --coverage-clover=clover.xml"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "cakephp/plugin-installer": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
